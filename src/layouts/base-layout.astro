---
const { title } = Astro.props;
---

<html lang="en" theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <a href="/" style="text-decoration: none;">
        <h1>lorddesert</h1>
      </a>
      <nav>
        <a href="/">Home</a>
        <a href="/about">About</a>
        <a href="/blog">Blog</a>
      </nav>
    </header>
    <article>
      <slot />
    </article>
  </body>
</html>

<style>
  :root {
    --bg-color: #000000e6;
  }

  html {
    background-color: var(--bg-color);
    color: whitesmoke;
    margin: .5rem;
    accent-color: crimson;
  }

  header {
    display: flex;
    gap: 5rem;
    align-items: center;
  }

  body {
    max-width: 1000px;
    margin: 0 auto;
  }

  nav {
    margin-top: 1rem;
  }

  nav a {
    margin-right: 5px;
  }

  :global(p) {
    max-width: 70ch;
    /*TODO: This should be for other elements as well? */
    line-height: 1.5;
  }
</style>
