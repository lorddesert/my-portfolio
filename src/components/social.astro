---
const { platform, username, src, alt } = Astro.props;
---

<a href={`https://www.${platform}.com/${username}`} target="_blank">
  <img src={src} alt={alt} />
</a>

<style>
  img {
    max-width: 24px;
  }

  a {
    padding: 10px 6px;
  }

  a:hover {
    background-color: rgba(255, 255, 255, 0.3);
  }

  
  @media (min-width: 600px) {
  a {
    padding: 10px 12px;
  }
}
</style>