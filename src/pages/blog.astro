---
import Layout from '../layouts/base-layout.astro'
const allPosts = await Astro.glob("../pages/posts/*.md");

---

<Layout>
  <h1>Blog</h1>
  <ul>
    {
      allPosts.map((post) => {
        return (
          <li>
            <a href={post.url}>{post.frontmatter.title}</a>
          </li>
        );
      })
    }
  </ul>
</Layout>